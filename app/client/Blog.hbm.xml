<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">


<hibernate-mapping>
   <class name="app.client.Blog" table="blog">
      <id name="id" type="java.lang.Integer" column="id">
         <generator class="increment"/>
      </id>
      <property name="author" type="java.lang.String"/>
      <property name="topic" type="java.lang.String"/>
       <property name="firstDraft" type="java.sql.Date"/>
        <property name="finalDraft" type="java.sql.Date"/>
        <property name="postedOn" type="java.sql.Date"/>
     
     </class>

</hibernate-mapping>
